rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isProfessional() {
      return exists(/databases/$(database)/documents/tutors/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/tutors/$(request.auth.uid)).data.role == 'professional';
    }

    match /tutors/{userId} {
      allow read: if isOwner(userId) || isProfessional();
      allow create: if request.auth.uid == userId;
      allow update: if isOwner(userId);
    }

    match /pets/{petId} {
      allow read: if request.auth.uid == resource.data.tutorId || isProfessional();
      allow create: if request.auth.uid == request.resource.data.tutorId;
      allow update, delete: if request.auth.uid == resource.data.tutorId || isProfessional();
    }
    
    match /appointments/{appointmentId} {
       allow read, create: if request.auth.uid == request.resource.data.tutorId || isProfessional();
       allow update, delete: if request.auth.uid == resource.data.tutorId || isProfessional();
    }

    match /invoices/{invoiceId} {
        allow read: if request.auth.uid == resource.data.clientId || isProfessional();
        allow create, update, delete: if isProfessional();
    }
    
    match /staff/{staffId} {
        allow read, write: if isProfessional();
    }
    
    match /inventory/{itemId} {
        allow read, write: if isProfessional();
    }
  }
}
